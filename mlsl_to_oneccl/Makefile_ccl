
ENABLE_DEBUG ?= 1
SHELL = bash
INCLUDES = -I$(CCL_ROOT)/include
LDFLAGS  = -L$(CCL_ROOT)/lib -lccl
CXX     ?= g++
tests    = ccl_sample

ifeq ($(ENABLE_DEBUG),1)
  CFLAGS += -O0 -g
else
  CFLAGS += -O2
endif

CXX_COMPILE = $(CXX) $(CFLAGS) $(INCLUDES)

.SUFFIXES:
.SUFFIXES: .cpp

.cpp:
	$(CXX_COMPILE) -o $* $< $(LDFLAGS)

all: $(tests)

run: all
	echo "running ccl_example ..." ; \
	mpiexec.hydra -n 4 -ppn 1 -l ./$(tests); \
	if [ "$${PIPESTATUS[0]}" -ne 0 ]; then \
		echo "Run FAILED." ; \
	fi ; \

clean:
	-rm -f $(tests).o $(tests) *.log
